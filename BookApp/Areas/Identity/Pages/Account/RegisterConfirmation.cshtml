@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-white text-center">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <p>
                        Please check your email to confirm your account. A confirmation link has been sent to the email address you provided during registration.
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a href="/Account/Login" class="btn" style="background-color: #c3ae85; color: white;">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
