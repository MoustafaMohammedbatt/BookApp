@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="border-radius: 15px; background-color: #f7f2e7; border: 1px solid #c3ae85;">
                <div class="card-body">
                    <h3 class="card-title text-center" style="color: #c3ae85;">@ViewData["Title"]</h3>
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" style="border: 1px solid #c3ae85; border-radius: 10px;" placeholder="Please choose your username." disabled />
                            <label asp-for="Username" class="form-label" style="color: #c3ae85;"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" style="border: 1px solid #c3ae85; border-radius: 10px;" placeholder="Please enter your phone number." />
                            <label asp-for="Input.PhoneNumber" class="form-label" style="color: #c3ae85;"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-outline-warning" style="background-color: #c3ae85; color: white; border-radius: 10px; padding: 10px 20px; border: none;">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
