@page
@model BookApp.Areas.Identity.Pages.Account.ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Confirm email change";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-white text-center">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <div class="mt-4">
                        <p>Your email change has been confirmed. You may now <a href="/Account/Login" class="text-decoration-none" style="color: #c3ae85;">log in</a> with your new email address.</p>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/Account/Manage" class="btn" style="background-color: #c3ae85; color: white;">Go to Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
