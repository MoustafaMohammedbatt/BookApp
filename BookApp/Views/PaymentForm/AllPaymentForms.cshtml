@model IEnumerable<PaymentForm>

@{
    ViewData["Title"] = "All Payment Forms";
}

<!-- Centered and styled header with margin-bottom -->
<h2 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold; margin-bottom:20px;">All Payment Forms</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead style="background-color:#c3ae85; color:white;">
            <tr>
                <th>ID</th>
                <th>Address</th>
                <th>National ID</th>
                <th>Phone Number</th>
                <th>Total Price</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>App User</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paymentForm in Model)
            {
                <tr>
                    <td>@paymentForm.Id</td>
                    <td>@paymentForm.Address</td>
                    <td>@paymentForm.NationalId</td>
                    <td>@paymentForm.PhoneNumber</td>
                    <td>@paymentForm.TotalPrice</td>
                    <td>@paymentForm.PaymentMethod</td>
                    <td>@paymentForm.PaymentStatus</td>
                    <td>@paymentForm.AppUser!.FirstName</td>
                    <td style="text-align:center;">
                        <!-- Updated button color to match theme -->
                        <a asp-action="EditPaymentStatus" asp-route-id="@paymentForm.Id" class="btn" style="background-color:#c3ae85; color:white;">Edit Status</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

