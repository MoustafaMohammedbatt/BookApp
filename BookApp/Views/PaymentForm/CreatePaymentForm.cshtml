@model PaymentFormDto
@{
    ViewBag.Title = "Create Payment Form";
}

<h2>Create Payment Form</h2>

<form asp-action="CreatePaymentForm" method="post">
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NationalId"></label>
        <input asp-for="NationalId" class="form-control" />
        <span asp-validation-for="NationalId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="Delivery">Delivery</option>
            <option value="Online">Online</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

