@model Shared.DTOs.PaymentEditDTO

@{
    ViewData["Title"] = "Edit Payment Status";
}

<h2>Edit Payment Status</h2>

<form asp-action="EditPaymentStatus" method="post">
    <!-- Hidden input for the Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="NationalId"></label>
        <input asp-for="NationalId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <input asp-for="PaymentMethod" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PaymentStatus"></label>
        <select asp-for="PaymentStatus" class="form-control" asp-items="Html.GetEnumSelectList<PaymentStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
