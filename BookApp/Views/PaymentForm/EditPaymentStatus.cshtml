@model Shared.DTOs.PaymentEditDTO

@{
    ViewData["Title"] = "Edit Payment Status";
}

<!-- Centered and styled header -->
<h2 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold;">Edit Payment Status</h2>

<form asp-action="EditPaymentStatus" method="post" style="max-width: 600px; margin: 20px auto; border: 1px solid #ddd; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
    <!-- Hidden input for the Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" readonly style="background-color:#f8f9fa;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="NationalId" class="form-label"></label>
        <input asp-for="NationalId" class="form-control" readonly style="background-color:#f8f9fa;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly style="background-color:#f8f9fa;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaymentMethod" class="form-label"></label>
        <input asp-for="PaymentMethod" class="form-control" readonly style="background-color:#f8f9fa;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="TotalPrice" class="form-label"></label>
        <input asp-for="TotalPrice" class="form-control" readonly style="background-color:#f8f9fa;" />
    </div>

    <div class="form-group mb-4">
        <label asp-for="PaymentStatus" class="form-label"></label>
        <select asp-for="PaymentStatus" class="form-control" asp-items="Html.GetEnumSelectList<PaymentStatus>()" style="background-color:#fff3cd;"></select>
    </div>

    <!-- Centered button -->
    <div style="text-align:center;">
        <button type="submit" class="btn" style="background-color:#c3ae85; color:white;">Save Changes</button>
    </div>
</form>

