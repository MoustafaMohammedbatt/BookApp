@model IEnumerable<CategoryDTO>

<h1 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold; margin-bottom:20px;">Categories <p>
	<a asp-action="Create" style="background-color:aliceblue" class="btn "><i class="fa-solid fa-plus"></i></a>
</p>  </h1>



<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead style="background-color:#c3ae85">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Description)
				</th>
				<th>
					Language
				</th>
				<th>
					Cover Image
				</th>
				<th>
					Is Deleted
				</th>
				<th style="text-align:center;">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Language)
					</td>
					<td>
						<img src="@Url.Content("~/images/category/" + item.CoverImage)" alt="@item.Name" style="width:100px; height:auto;" />
					</td>
					<td>
						<p>@(item.IsDeleted ? "✓" : "✘")</p>
					</td>
					<td style="text-align:center;">
						<!-- Dropdown for actions -->
						<div class="dropdown">
							<button class="btn" type="button" id="dropdownMenuButton-@item.Id" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fa-solid fa-ellipsis-vertical"></i>
							</button>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@item.Id">
								<li>
									<a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
								</li>
								<li>
									<a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a>
								</li>
								<li>
									<form asp-action="ToggleDelete" method="post" style="display:inline;">
										<input type="hidden" name="id" value="@item.Id" />
										<button type="submit" class="dropdown-item text-danger">@(item.IsDeleted ? "Restore" : "Delete")</button>
									</form>
								</li>
							</ul>
						</div>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

