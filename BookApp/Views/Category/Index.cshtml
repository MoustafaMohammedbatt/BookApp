@model IEnumerable<Domain.Entites.Category>

<h1>Categories</h1>

<p>
	<a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Description)
				</th>
				<th>
					Cover Image
				</th>
				<th>
					Is Deleted
				</th>
				<th>Edit</th>
				<th>Details</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						<img src="@Url.Content("~/images/category/" + item.CoverImage)" alt="@item.Name" style="width:100px; height:auto;" />
					</td>
					<td>
						<p>@(item.IsDeleted ? "✓" : "✘")</p>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
					</td>
					<td>

						<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
					</td>
					<td>
						<form asp-action="ToggleDelete" method="post" style="display:inline;">
							<input type="hidden" name="id" value="@item.Id" />
							<input type="submit" value=@(item.IsDeleted ? "Restore" : "Delete") class="btn btn-outline-danger" />
						</form>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>