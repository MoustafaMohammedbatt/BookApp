@model Shared.DTOs.UploadCategoryDTO

@{
    ViewData["Title"] = "Edit Category";
}

<h1 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold; margin-bottom:20px;">Edit Category</h1>

<!-- Form with border, padding, and rounded corners -->
<form asp-action="Edit" enctype="multipart/form-data" style="border:1px solid #c3ae85; padding:20px; border-radius:8px;">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Language" class="control-label"></label>
        <select asp-for="Language" class="form-control">
            <option value="">Select Language</option>
            @foreach (var language in Enum.GetValues(typeof(Language)))
            {
                <option value="@language">@language</option>
            }
        </select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverImage" class="control-label"></label>
        <input asp-for="CoverImage" type="file" class="form-control" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>

    <!-- Centered buttons with margins for spacing -->
    <div class="form-group mt-4 text-center">
        <button type="submit" class="btn btn-outline-primary" style="width:150px; margin-right:10px;">Save</button>
        <a asp-action="Index" class="btn btn-outline-info" style="width:150px;">Back to List</a>
    </div>
</form>
