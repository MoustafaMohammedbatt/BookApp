@model Shared.DTOs.UploadCategoryDTO

@{
    ViewData["Title"] = "Edit Category";
}


<h1>Edit Category</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Language" class="control-label"></label>
        <select asp-for="Language" class="form-control">
            <option value="">Select Language</option>
            @foreach (var language in Enum.GetValues(typeof(Language)))
            {
                <option value="@language">@language</option>
            }
        </select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverImage" class="control-label"></label>
        <input asp-for="CoverImage" type="file" class="form-control" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Save Changes" class="btn btn-outline-primary" /> |
        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
    </div>
</form>

