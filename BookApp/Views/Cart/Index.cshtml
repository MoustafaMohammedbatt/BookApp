@model IEnumerable<Domain.Entites.Cart>

<h2>Carts</h2>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Total Price</th>
            <th>Reception</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cart in Model)
        {
            <tr>
                <td>@cart.Id</td>
                <td>@cart.TotalPrice</td>
                <td>@cart.Reception?.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cart.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>