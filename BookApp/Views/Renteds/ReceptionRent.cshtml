@model IEnumerable<Rented>

<h2>Rented Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book</th>
            <th>User</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Returned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book!.Title</td>
                <td>@item.User!.UserName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@(item.IsReturned ? "✓" : "✘")</td>
                <td>
                    <form asp-action="ToggleReturned" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm @(item.IsReturned ? "btn-secondary" : "btn-primary")"
                        @(item.IsReturned ? "disabled" : "")>
                            @(item.IsReturned ? "Returned" : "Mark as Returned")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
