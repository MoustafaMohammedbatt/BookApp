@model IEnumerable<Rented>

<!-- Centered and styled header with margin-bottom -->
<h2 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold; margin-bottom:20px;">Rented Books</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead style="background-color:#c3ae85">
            <tr>
                <th>Book</th>
                <th>User</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Returned</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book!.Title</td>
                    <td>@item.User!.UserName</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@(item.IsReturned ? "✓" : "✘")</td>
                    <td style="text-align:center;">
                        <form asp-action="ToggleReturned" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm @(item.IsReturned ? "btn-secondary" : "btn-primary")"
                            @(item.IsReturned ? "disabled" : "")>
                                @(item.IsReturned ? "Returned" : "Mark as Returned")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

