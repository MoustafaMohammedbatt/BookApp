@model IEnumerable<Domain.Entites.Rented>

@{
    ViewData["Title"] = "Rented Books";
}

<h2 style="text-align:center; background-color:#c3ae85; padding:10px; color:white; font-weight:bold; margin-bottom:20px;">Rented Books</h2>

<div class="table-responsive">
<table class="table table-striped table-hover">
        <thead style="background-color:#c3ae85">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book!.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReturned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book!.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @(item.IsReturned ? "Yes" : "No")
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.User!.Email)
                </td>

            </tr>
        }
    </tbody>
</table>
</div>