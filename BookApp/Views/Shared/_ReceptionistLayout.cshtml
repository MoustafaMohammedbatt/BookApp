<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Qari ? ...</title>
    <link rel="icon" type="image/jpeg" href="~/images/logo/QariFavIcon.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookApp.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Oswald', sans-serif;
        }

        .nav-link {
            font-family: 'Oswald', sans-serif;
        }

        .dropdown-item {
            font-family: 'Oswald', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <!-- Sidebar Toggle Button -->
                <button class="btn d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="true" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <!-- Sidebar Menu -->
                <div class="collapse d-md-block" id="sidebarMenu">
                    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="height: 100vh; width: 100%;">
                        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                            <img src="~/images/logo/iconNav.png" alt="Logo" class="img-fluid" style="max-width: 80%; height: auto;">
                        </a>
                        <hr>
                        <ul class="nav nav-pills flex-column mb-auto">

                            <li>
                                <a asp-action="Create" asp-controller="Cart" class="nav-link link-dark">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                                    Add Cart
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                    Add User
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" id="register" asp-action="ReceptionRent" asp-controller="Renteds">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                    Book Returned
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" id="register" asp-action="AllPaymentForms" asp-controller="PaymentForm">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                    Payments 
                                </a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Book" class="nav-link link-dark">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                    Books
                                </a>
                            </li>

                        </ul>
                        <hr>
                        <div class="d-flex flex-column mt-auto">
                            <div class="dropdown mt-3">
                                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/author/noImage.jpeg" alt="" width="32" height="32" class="rounded-circle me-2">
                                    <strong>Receptionist</strong>
                                </a>
                                <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser1">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form id="logoutForm" class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark ">Logout</button>
                                        </form>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9" id="mainContent">
                <header>
                    <!-- Admin-specific navbar or header -->
                </header>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <partial name="_FooterPartial" />
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('click', function (event) {
            var sidebarMenu = document.getElementById('sidebarMenu');
            var mainContent = document.getElementById('mainContent');
            var toggleButton = document.querySelector('button[data-bs-toggle="collapse"]');

            if (!sidebarMenu.contains(event.target) && !toggleButton.contains(event.target)) {
                var bsCollapse = new bootstrap.Collapse(sidebarMenu, {
                    toggle: false
                });
                bsCollapse.hide();
            }
        });


    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
