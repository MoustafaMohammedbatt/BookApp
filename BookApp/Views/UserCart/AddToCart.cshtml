@model Shared.DTOs.AddBookToCartDto

<h2>Add to Cart</h2>
<form asp-action="AddToCart" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="BookId" class="form-control" />
        <label asp-for="BookId">Book ID</label>
        <input type="text" asp-for="BookId" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input type="number" asp-for="Quantity" class="form-control" min="1" />
    </div>
    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>
