@page
@model BookApp.Models.ErrorViewModel
@{
    Layout = null; // Assuming no layout or define one if necessary
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invalid URL</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f8f8; /* Adjust to your background color */
            color: #2c2c2c; /* Adjust the color scheme */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .error-container {
            text-align: center;
        }

        .error-code {
            font-size: 10rem;
            font-weight: bold;
        }

        .error-message {
            font-size: 2rem;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">404</div>
        <div class="error-message">Invalid URL</div>
        <p>The page you are looking for does not exist or the URL is malformed.</p>
    </div>
</body>
</html>
